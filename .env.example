# Environment Configuration
NODE_ENV=development

# Service Ports
API_PORT=3000
UI_PORT=3001
MCP_PORT=3002

# API Configuration
DATABASE_URL=
JWT_SECRET=your-jwt-secret-here

# UI Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000

# MCP Ingestion Configuration
MCP_SERVER_NAME=content-automation-mcp-ingestion
MCP_SERVER_VERSION=0.1.0
MCP_AUTH_ENABLED=false

# Optional: Override default Docker Compose project name
COMPOSE_PROJECT_NAME=content-automation-stack

# ============================================================================
# Optional Local Integrations (enabled via Docker Compose profiles)
# ============================================================================

# OpenProject Integration (enable via --profile openproject)
OPENPROJECT_BASE_URL=http://openproject:8080
OPENPROJECT_API_TOKEN=
# Image tag override for enterprise deployment
OPENPROJECT_IMAGE_TAG=latest

# Penpot Integration (enable via --profile penpot)
PENPOT_FRONTEND_URL=http://penpot-frontend:9001
PENPOT_BACKEND_URL=http://penpot-backend:6060
PENPOT_EXPORTER_URL=http://penpot-exporter:6061
PENPOT_API_TOKEN=

# Penpot Configuration
PENPOT_PUBLIC_URI=http://localhost:9001
PENPOT_SECRET_KEY=change-me-in-production
PENPOT_ALLOW_REGISTRATION=true
PENPOT_PRELOAD_DEMO_DATA=false

# Penpot Image tag overrides for enterprise deployment
PENPOT_BACKEND_IMAGE_TAG=latest
PENPOT_FRONTEND_IMAGE_TAG=latest
PENPOT_EXPORTER_IMAGE_TAG=latest
